{
  "name": "chatapp-monorepo",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*",
    "infra/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @chatapp/mobile dev",
    "dev:tunnel": "pnpm --filter @chatapp/mobile start --port 8082",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "build": "pnpm -r build",
    "clean": "pnpm -r run clean || true",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:storage": "firebase deploy --only storage",
    "emulators": "firebase emulators:start",
    "emulators:auth": "firebase emulators:start --only auth",
    "emulators:firestore": "firebase emulators:start --only firestore",
    "seed": "pnpm --filter @chatapp/scripts seed"
  }
}
