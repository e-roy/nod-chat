rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow all authenticated users to read
    // Allow user to write their own profile OR unauthenticated writes (Cloud Functions in emulator)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null || request.auth == null;
    }
    
    // Chats collection - allow all authenticated users
    match /chats/{chatId} {
      allow read, write, create, update, delete, list: if request.auth != null;
      
      // Messages subcollection - allow all authenticated users
      match /messages/{messageId} {
        allow read, write, create, update, delete, list: if request.auth != null;
      }
    }
    
    // Groups collection - users can only access groups they are members of
    match /groups/{groupId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.members;
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.members;
    }
  }
}

