rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read any user profile (for chat creation)
    // but only write to their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chats collection - allow authenticated users to read/write chats
    // In production, you'd add participant checks, but for now keep it simple
    match /chats/{chatId} {
      allow read, write, create: if request.auth != null;
    }
    
    // Messages collection - allow authenticated users to read/write messages
    // In production, you'd add participant checks, but for now keep it simple
    match /chats/{chatId}/messages/{messageId} {
      allow read, write, create: if request.auth != null;
    }
    
    // Groups collection - users can only access groups they are members of
    match /groups/{groupId} {
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.members;
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.members;
    }
  }
}

